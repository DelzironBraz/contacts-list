

<main class="row log_in">
  <aside class="col log_in_banner">
    <%= image_tag("undraw_Contact_us_re_4qqt.png", size: "567x304", alt: "login_logo")%>
  </aside>
  <section class="col align-content-center log_in_form">
    <div class="log_in_card">
      <h2>Contact List</h2>
      <br>
      <form>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email:" %>
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
          </div>
          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password:" %>
            <div id="emailHelp" class="form-text">
              <%= link_to "Forgot your password ?", new_password_path(resource_name) %>
            </div>
          </div>
          <%= f.submit "Login",  class: "btn btn-light" %>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
        <% end %>
      </form>
    </div>
  </section>
</main>


